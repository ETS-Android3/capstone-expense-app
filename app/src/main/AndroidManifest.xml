<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gsbatra.expensedeck">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseDeck">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ExpenseDeck.NoActionBar">
        </activity>
        <activity android:name=".AddTransactionActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".EditTransactionActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".AddSubscriptionActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".AddGoalsActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".EditGoalActivity"
            android:windowSoftInputMode="adjustPan">
        <activity android:name=".EditSubscriptionActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>