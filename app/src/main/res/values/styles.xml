<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">"@font/opensans_regular"</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/white</item>
    </style>

    <style name="OverflowMenu" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:popupBackground">@color/white_surface</item>
    </style>

    <style name="buttonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>